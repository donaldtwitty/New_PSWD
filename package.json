{
    "name": "purposeful-solutions-web-design",
    "version": "1.0.0",
    "description": "Web Design with Purpose",
    "scripts": {
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "format": "prettier --write \"**/*.{js,html,css,json}\"",
        "lint": "eslint \"**/*.js\"",
        "lint:fix": "eslint \"**/*.js\" --fix",
        "build": "npm run lint && npm run test:coverage && npm run format",
        "validate": "npm run lint && npm run test",
        "pre-commit": "npm run validate && npm run format",
        "deploy": "npm run build && echo 'Ready for deployment'",
        "audit": "npm audit --audit-level moderate"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jquery": "^3.7.1",
        "prettier": "^3.0.0",
        "eslint": "^8.0.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "collectCoverage": true,
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "New_PSWD/assets/js/custom-testable.js",
            "New_PSWD/assets/js/modal-testable.js",
            "New_PSWD/assets/js/accessibility-testable.js"
        ],
        "coverageReporters": [
            "text",
            "html",
            "lcov"
        ],
        "testMatch": [
            "**/__tests__/**/*.test.js"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ]
    }
}
